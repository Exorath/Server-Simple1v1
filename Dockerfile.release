FROM openjdk:8-jdk

COPY ./mcserver/. /usr/src/mcserver/
COPY ./mcserver/startserver /usr/bin/
WORKDIR /usr/src/mcserver
RUN cp startserver /usr/bin/
RUN apt-get update && apt-get install -y --no-install-recommends screen && rm -rf /var/lib/apt/lists/*
ENTRYPOINT ["screen", "-S", "-X", "startserver"]
